<div class='container'>
	<div class='row'>
		<div class='col-md-4'>
			<div class="panel panel-default">
				<div class="panel-heading">
					<h3 class="panel-title">Orders</h3>
				</div>
				<div class="panel-body">
				<% if @orders.any? %>
				  <% @orders.each do |order| %>
				    <p><%= order.user.email %></p>
				    <p><%= link_to order.post.title, '/posts' %></p>
				    <p><%= order.number %></p>
				  <% end %>
				<% else %>
				  No orders yet
				<% end %>
				</div>
			</div>
		</div>
	</div>
</div>
