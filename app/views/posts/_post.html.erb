<div class='col-md-4'>
	<div class="panel panel-default">
	  <div class="panel-heading">
	    <h3 class="panel-title"><%= post.title %></h3>
	  </div>
	  <div class="panel-body">
	    <% if post.image.present? %>
			<%= image_tag post.image.url(:thumb), class: 'uploaded-pic' %><br>
		<% end %>
		<p><%= post.description %></p>
		<p><% post.tags.each do |tag| %>
			<%= link_to tag.name, tag_path(tag) %></p>
		<% end %>
		<% unless post.address.blank? %>
			<p><%= link_to 'Map', post_map_path(post), class: 'btn btn-warning' %></p>
		<% end %>
	  </div>
	  <div class="panel-footer">Posted by: <%= post.user.email %></div>
	</div>					
</div>
