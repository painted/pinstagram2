<% if @posts.any? %>
	<% @posts.each do |post| %>

		<% if post.image.present? %>
			<%= image_tag post.image.url(:thumb), class: 'uploaded-pic' %><br>
		<% end %>
		<%= post.title %><br>
		<%= post.description %><br>
		Posted by: <%= post.user.email %>
	<% end %>
<% else %>
	<h1>No posts yet</h1>
<% end %>
<%= link_to 'New post', new_post_path%>