<div class='container'>
	<div class='row'>
		<div class='col-md-4'>
			<div class="panel panel-default">
				<div class="panel-heading">
					<h3 class="panel-title">New Post</h3>
				</div>
				<div class="panel-body">
					<%= form_for @post, html: { multipart: true } do |f| %>
						<p><%= f.label :title %><br>
						<%= f.text_field :title %></p>

						<p><%= f.label :description %><br>
						<%= f.text_area :description %></p>

						<p><%= f.label :image %><br>
						<%= f.file_field :image %></p>

						<p><%= f.label :tag_names, 'Tags' %><br>
						<%= f.text_field :tag_names %></p>

						<%= f.submit 'Post it!', class: "btn btn-primary btn-lg" %>
					<% end %>
				</div>
			</div>
		</div>
	</div>
</div>
